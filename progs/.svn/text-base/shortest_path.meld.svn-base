
type persistent weight(node, node, int).
type persistent start(node).
type persistent end(node).
type path(node, min int, node list).

type print_path(node, int, node list).

extern node list list_node_new().
extern node list list_push_tail_node(node list, node).

path(C, W, list_node_new()) :-
	start(A),
	weight(A, C, W),
	edge(A, C).

path(A, D + W, list_push_tail_node(P, E)) :-
	path(E, D, P),
	edge(E, A),
	weight(E, A, W).
	
print_path(A, D, P) :-
   end(A),
   path(A, D, P).
