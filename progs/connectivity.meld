
type persistent start(node).
type persistent end(node).
type success(node, int).
type connects(node, sum int). /* connects in "so many" ways */

connects(B, 1) :-
   start(A),
   edge(A, B).
   
connects(B, T + 1) :-
   connects(A, T),
   edge(A, B).
   
success(A, T) :-
   end(A),
   edge(B, A),
   connects(B, T).
   